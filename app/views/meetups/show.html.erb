<h1><%= @meetup.title %></h1>
<h3><%= @meetup.date %></h3>
<p><%= @meetup.description %></p>

<% if policy(@meetup).edit? %>
  <%= link_to "Edit this meetp", edit_meetup_path(@meetup), class: "btn btn-secondary" %>
<% end %>

<%= link_to "Back to all meetups", root_path, class: "btn btn-primary" %>

<% if policy(@meetup).destroy? %>
  <%= button_to "Delete meetup", meetup_path(@meetup), method: :delete, data: { confirm: "Are you sure you want to delete this meetup?" }, class: "btn btn-danger", remote: true %>
<% end %>
